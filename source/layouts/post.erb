<% wrap_layout :layout do %>

<div id="main" role="main" class="ph4">
  <div class="mw7">
    <h1 class="mt0 mb1 f1-ns f2 lh-title"><%= current_article.title %></h1>
    <time datetime="" class="dib mt0 f4-ns f5 mb3 sans-serif fw3"
      ><%= current_article.date.strftime('%B %Y') %></time
    >
  </div>
  <figure class="mw6 mh0 mv2">
    <img
      src="/hcde598/images/<%= current_article.data.img %>"
      alt="<%= current_article.title %> project"
    />
  </figure>
  <article class="mt4 lh-copy serif">
    <%= yield %>
  </article>
</div>

<aside class="mt4 ph4">
  <div class="mw7">
    <ul
      class="flex-ns items-center justify-between list pl0 bt b--light-gray pt3"
    >
      <li>
        <% prev_article = current_article.article_previous %> <% if prev_article
        %>
        <p>
          <span class="f5 db b sans-serif">Previous Post</span>
          <a
            href="/hcde598/<%= prev_article.url %>"
            rel="prev"
            title="Previous article: <%= prev_article.title %>"
          >
            <%= prev_article.title %>
          </a>
        </p>
        <% end %>
      </li>
      <li class="tr-ns">
        <% next_article = current_article.article_next %> <% if next_article %>
        <p>
          <span class="f5 db b sans-serif">Next Post</span>
          <a
            href="/hcde598/<%= next_article.url %>"
            rel="next"
            title="Next article: <%= next_article.title %>"
          >
            <%= next_article.title %>
          </a>
        </p>
        <% end %>
      </li>
    </ul>
  </div>
</aside>
<% end %>
